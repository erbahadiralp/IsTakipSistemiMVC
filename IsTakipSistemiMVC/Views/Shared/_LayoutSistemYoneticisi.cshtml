@{
    string birimAd = (string)Session["BirimAd"]; // Retrieve the department name from the session
    string personelFoto = Session["PersonelFotograf"] != null ? Url.Content((string)Session["PersonelFotograf"]) : Url.Content("~/theme/assets/avatars/default-avatar.jpg");
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>İş Takip Sistemi</title>
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/theme/css/app-light.css" id="lightTheme">
    <style>
        .navbar {
            justify-content: space-between;
            height: 71px;
        }

        .navbar-brand {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .navbar-nav {
            margin-left: 0;
        }

            .navbar-nav.ml-auto {
                margin-left: auto !important;
            }

        .avatar {
            display: flex;
            align-items: center;
        }

        .avatar-img {
            margin-right: 10px;
        }

        .avatar-text {
            display: flex;
            flex-direction: column;
        }

            .avatar-text h5 {
                margin-bottom: 0;
                font-size: 14px;
            }

            .avatar-text span {
                font-size: 12px;
                color: #6c757d;
                white-space: nowrap;
            }

        .navbar-nav.ml-auto .nav-item {
            display: flex;
            align-items: center;
        }

        .nav-link .icon-text {
            margin-left: 5px;
        }

        .navbar-nav .nav-item {
            padding: 0;
            margin: 0;
        }

            .navbar-nav .nav-item .nav-link {
                display: flex;
                align-items: center;
                padding: 0;
            }

        .navbar-nav .nav-item {
            margin-right: 15px;
        }

            .navbar-nav .nav-item:last-child {
                margin-right: 0;
            }

        .dropdown-toggle::after {
            display: none;
        }

        .dropdown-menu {
            padding: 0;
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 0.25rem;
        }

            .dropdown-menu .nav-item {
                display: flex;
                align-items: center;
                padding: 10px 20px;
                color: #333;
                cursor: pointer;
            }

                .dropdown-menu .nav-item:hover {
                    background-color: #f8f9fa;
                }

                .dropdown-menu .nav-item a {
                    color: inherit;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                }

                .dropdown-menu .nav-item i {
                    margin-right: 10px;
                }

        .navbar-brand:hover img {
            opacity: 0.8; /*Add a hover effect to change the logo opacity */
            transition: opacity 0.3s ease;
            transform: scale(1.1);
        }
    </style>

</head>
<body class="horizontal light">
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-white flex-row border-bottom shadow">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "SistemYoneticisi")">
                    <img src="~/theme/assets/logo.png" alt="logo" style="width:115px" />
                </a>
                <button class="navbar-toggler mt-2 mr-auto toggle-sidebar text-muted">
                    <i class="fe fe-menu navbar-toggler-icon"></i>
                </button>
                <div class="collapse navbar-collapse bg-white ml-lg-4" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "SistemYoneticisi")">
                                <i class="bi bi-house-door"></i><span class="ml-lg-2">Ana Sayfa</span><span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-tools"></i><span class="ml-lg-2">İşlemler</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Birim", "SistemYoneticisi")"><i class="bi bi-building"></i> Birim İşlemleri</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Personel")"><i class="bi bi-people"></i> Personel İşlemleri</a>
                                <a class="dropdown-item" href="@Url.Action("Loglar", "SistemYoneticisi")"><i class="bi bi-clipboard-data"></i> Log İşlemleri</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("YemekEkle", "SistemYoneticisi")">
                                <i class="bi bi-plus-square"></i><span class="ml-lg-2">Menü Ekle</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav d-flex flex-row ml-auto">
                    <li class="nav-item">
                        <a class="nav-link text-muted my-2" href="@Url.Action("Index", "Duyuru")" id="duyuru" data-mode="light">
                            <i class="bi bi-bell"></i>
                            <span class="icon-text">Duyurular</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-muted my-2" href="@Url.Action("Index", "Mail")" id="mail" data-mode="light">
                            <i class="bi bi-envelope"></i>
                            <span class="icon-text">Mailler</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown ml-lg-0">
                        <a class="nav-link dropdown-toggle text-muted" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="avatar avatar-sm mt-2">
                                <img src="@personelFoto" alt="Kullanıcı Fotoğrafı" class="avatar-img rounded-circle">
                                <div class="avatar-text">
                                    <h6 class="mb-0 font-weight-normal">@Session["PersonelAdSoyad"]</h6>
                                    <span>@birimAd - Yönetici</span>
                                </div>
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            <li class="nav-item">
                                <a class="nav-link pl-3" href="@Url.Action("Index", "Profil")"><i class="bi bi-person"></i> Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-3" href="@Url.Action("Index", "ParolaKontrol")"><i class="bi bi-key"></i> Şifre Değiştir</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link pl-3" href="@Url.Action("Index", "Logout")"><i class="bi bi-box-arrow-right"></i> Çıkış Yap</a>
                            </li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>
        <div class="main-panel">
            <div class="content-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/theme/js/jquery.min.js"></script>
    <script src="~/theme/js/popper.min.js"></script>
    <script src="~/theme/js/bootstrap.min.js"></script>
    <script src="~/theme/js/simplebar.min.js"></script>
    <script src="~/theme/js/daterangepicker.js"></script>
    <script src="~/theme/js/jquery.stickOnScroll.js"></script>
    <script src="~/theme/js/tinycolor-min.js"></script>
    <script src="~/theme/js/config.js"></script>
    <script src="~/theme/js/d3.min.js"></script>
    <script src="~/theme/js/topojson.min.js"></script>
    <script src="~/theme/js/datamaps.all.min.js"></script>
    <script src="~/theme/js/datamaps-zoomto.js"></script>
    <script src="~/theme/js/datamaps.custom.js"></script>
    <script src="~/theme/js/Chart.min.js"></script>
    <script src="~/theme/js/jquery.steps.min.js"></script>
    <script src="~/theme/js/jquery.validate.min.js"></script>
    <script src="~/theme/js/bootstrap-datepicker.min.js"></script>
    <script src="~/theme/js/app.js"></script>
    <script>
        $(document).ready(function () {
            var currentPath = window.location.pathname.toLowerCase();
            $('ul.navbar-nav > li > a').each(function () {
                var href = $(this).attr('href').toLowerCase();
                if (currentPath === href) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
</body>
</html>
