@{
    string birimAd = (string)Session["BirimAd"]; // Retrieve the department name from the session
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>İş Takip Çalışan</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .container-fluid {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .main-panel {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex-grow: 1;
            padding: 20px;
        }

        .sidebar-brand-wrapper {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            padding: 10px;
            padding-right: 65px;
        }

        .sidebar-brand img {
            width: 160px;
            height: 45px;
            display: block;
        }

        .navbar-brand-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper fixed-top">
                <a class="sidebar-brand brand-logo" href="@Url.Action("Index", "Calisan")">
                    <img src="~/assets/images/logo.png" alt="logo" />
                </a>
                <a class="sidebar-brand brand-logo-mini" href="@Url.Action("Index", "Calisan")">
                    <img src="https://www.icdas.com.tr/images/favicon.ico" alt="logo" />
                </a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img class="img-xs rounded-circle" src="~/assets/images/faces/face15.jpg" alt="">
                            </div>
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@Session["PersonelAdSoyad"]</h5>
                                <span>@birimAd - Çalışan</span>
                            </div>
                        </div>
                    </div>
                </li>
                <br />
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "Calisan")">
                        <span class="menu-icon">
                            <i class="mdi mdi-home-outline"></i>
                        </span>
                        <span class="menu-title">Ana Sayfa</span>
                    </a>
                </li>

                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Yap", "Calisan")">
                        <span class="menu-icon">
                            <i class="mdi mdi-playlist-play"></i>
                        </span>
                        <span class="menu-title">İş Tamamla</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Takip", "Calisan")">
                        <span class="menu-icon">
                            <i class="mdi mdi-playlist-play"></i>
                        </span>
                        <span class="menu-title">İş Takip</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("BasicTable", "Tables")">
                        <span class="menu-icon">
                            <i class="mdi mdi-table-large"></i>
                        </span>
                        <span class="menu-title">İzin İste</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Duyurular", "Calisan")">
                        <span class="menu-icon">
                            <i class="mdi mdi-bullhorn"></i>
                        </span>
                        <span class="menu-title">Duyurular</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" href="@Url.Action("Index", "Mail")">
                        <span class="menu-icon">
                            <i class="mdi mdi-bullhorn"></i>
                        </span>
                        <span class="menu-title">Mailler</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid page-body-wrapper">
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index", "Calisan")">
                        <img src="~/assets/images/logo-mini.svg" alt="logo" />
                    </a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>

                    <div class="navbar-brand-wrapper d-flex align-items-center justify-content-center">
                        İş Takip Çalışan
                    </div>

                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item dropdown border-left">
                            <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                                <i class="mdi mdi-email"></i>
                                <span class="count bg-success"></span>
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="../../assets/images/faces/face15.jpg" alt="">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">@Session["PersonelAdSoyad"]</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <h6 class="p-3 mb-0">Menü</h6>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item preview-item" href="@Url.Action("Profil", "Calisan")">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-account "></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Profilim</p>
                                    </div>
                                </a>

                                <a class="dropdown-item preview-item" href="@Url.Action("Index", "ParolaKontrol")">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-key-variant text-success"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Parola Değiştir</p>
                                    </div>
                                </a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item preview-item" href="@Url.Action("Index", "Logout")">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-dark rounded-circle">
                                            <i class="mdi mdi-logout text-danger"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content">
                                        <p class="preview-subject mb-1">Çıkış Yap</p>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- plugins:js -->
    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- inject:js -->
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/settings.js"></script>
    <script src="~/assets/js/todolist.js"></script>
    <!-- endinject -->
</body>
</html>
