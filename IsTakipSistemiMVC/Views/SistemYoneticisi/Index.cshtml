@model IEnumerable<IsTakipSistemiMVC.Models.BirimViewModel>

@{
    var sonDuyurular = ViewBag.SonDuyurular as List<IsTakipSistemiMVC.Models.Duyurular>;
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSistemYoneticisi.cshtml";
}

<div class="container mt-4">
    <!-- Üstte Üç Bilgi Kartı -->
    <div class="row mb-4">
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card shadow-sm small-card card-color-1">
                <div class="card-body text-center">
                    <h5 class="card-title">Toplam Çalışan Sayısı</h5>
                    <p class="card-text">
                        @ViewBag.TotalEmployees
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card shadow-sm small-card card-color-2">
                <div class="card-body text-center">
                    <h5 class="card-title">Son Eklenen Çalışan</h5>
                    <p class="card-text">
                        @if (ViewBag.LastAddedEmployee != null)
                        {
                            <img src="@ViewBag.LastAddedEmployee.FotoUrl" alt="Çalışan Foto" class="img-thumbnail mb-2">
                            <strong>Ad:</strong> @ViewBag.LastAddedEmployee.personelAdSoyad<br>
                            <strong>Pozisyon:</strong> @ViewBag.LastAddedEmployee.personelPozisyon<br>
                            <strong>Eklenme Tarihi:</strong> @ViewBag.LastAddedEmployee.eklenmeTarihi.ToShortDateString()
                        }
                        else
                        {
                            <span>Son eklenen çalışan bilgisi mevcut değil.</span>
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card shadow-sm small-card card-color-3">
                <div class="card-body text-center">
                    <h5 class="card-title">En Yüksek Performans Gösteren Çalışan</h5>
                    <p class="card-text">
                        @if (ViewBag.TopPerformer != null)
                        {
                            <strong>Ad:</strong> @ViewBag.TopPerformer.personelAdSoyad<br>
                            <strong>Pozisyon:</strong> @ViewBag.TopPerformer.personelPozisyon<br>
                            <strong>Performans Puanı:</strong> @ViewBag.TopPerformer.performansPuani
                            <div class="progress mt-2">
                                <div class="progress-bar" role="progressbar" style="width: @ViewBag.TopPerformer.performansPuani%;" aria-valuenow="@ViewBag.TopPerformer.performansPuani" aria-valuemin="0" aria-valuemax="100">@ViewBag.TopPerformer.performansPuani%</div>
                            </div>
                        }
                        else
                        {
                            <span>En yüksek performans gösteren çalışan bilgisi mevcut değil.</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Altında Grafik ve Yanında Duyuru Kartı -->
    <div class="row">
        <div class="col-lg-8 col-md-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Birimlerin Toplam İşleri</h5>
                    <canvas id="myChart" class="chart-canvas"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Duyurular</h5>
                    @if (sonDuyurular != null && sonDuyurular.Any())
                    {
                        foreach (var duyuru in sonDuyurular)
                        {
                            <div class="announcement-card mb-3">
                                <h6>@duyuru.duyuruBaslik</h6>
                                <p class="card-text">@duyuru.duyuruIcerik</p>
                                <p class="card-text"><small class="text-muted">@duyuru.duyuruTarih.ToShortDateString()</small></p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="announcement-card">
                            <p class="card-text">Henüz duyuru bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/chart.min.js"></script>
<script>
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(ViewBag.labelBirim),
            datasets: [{
                label: 'Birimlerin Toplam İşleri',
                data: @Html.Raw(ViewBag.dataIs),
                backgroundColor: '#1b68ff',
                borderColor: '#0a0908',
                borderWidth: 2
            }]
        }
    });
</script>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Kart Stilleri */
    .card {
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
        background-color: #f9f6f1;
    }

        .card:hover {
            transform: scale(1.02);
        }

    .card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #22333b;
    }

    .card-text {
        font-size: 0.75rem;
        color: #555;
    }

    /* Küçük Kartlar */
    .small-card {
        padding: 20px;
        text-align: center;
        height: 125px; /* Kartların yüksekliğini aynı yapmak için eklendi */
    }

    .card-color-1 {
        background-color: #d1e7dd;
    }

    .card-color-2 {
        background-color: #cfe2ff;
    }

    .card-color-3 {
        background-color: #f8d7da;
    }

    .announcement-card {
        background-color: #fff3cd;
        border: 1px solid #f1c40f;
        padding: 10px;
        border-radius: 5px;
    }

    /* Resim Stili */
    .img-thumbnail {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    /* Progress Bar Stili */
    .progress {
        height: 20px;
        border-radius: 10px;
        background-color: #e9ecef;
    }

    .progress-bar {
        background-color: #22333b;
        font-weight: bold;
    }

    /* Grafik Stili */
    .chart-canvas {
        max-width: 100%;
        height: 400px;
    }

    .col-md-6,
    .col-md-12 {
        max-width: 100%;
    }
</style>
