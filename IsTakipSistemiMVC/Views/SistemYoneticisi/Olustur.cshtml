@{
    ViewBag.Title = "Olustur";
    Layout = "~/Views/Shared/_LayoutSistemYoneticisi.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-center">Yeni Birim Ekleme İşlemi</h3>
            <hr />
            @using (Html.BeginForm("Olustur", "SistemYoneticisi", FormMethod.Post)) 
            { 
                <div class="row mb-3">
                    <label for="birimAd" class="col-sm-3 col-form-label text-end">Birim Adı:</label>

                    <div class="col-sm-6">
                        <input type="text" class="form-control" id="birimAd" name="birimAd" placeholder="Birim adı girin"/>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">EKLE</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 15px;
    }

    .card-title {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
