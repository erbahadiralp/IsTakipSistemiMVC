@{
    ViewBag.Title = "DuyuruEkle";
    Layout = "~/Views/Shared/_LayoutSistemYoneticisi.cshtml";
}

@model IsTakipSistemiMVC.Models.Duyurular

<div class="container mt-5">
    <a href="@Url.Action("Duyurular", "SistemYoneticisi")" class="btn btn-secondary mb-3">Geri</a>
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center">Yeni Duyuru Ekle</h2>
            <hr />
            @using (Html.BeginForm())
            {
                <div class="form-group mb-3">
                    <label class="form-label">Duyuru Başlık</label>
                    @Html.TextBoxFor(model => model.duyuruBaslik, new { @class = "form-control", placeholder = "Duyuru başlığı girin" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Duyuru İçerik</label>
                    @Html.TextAreaFor(model => model.duyuruIcerik, new { @class = "form-control", rows = 5, placeholder = "Duyuru içeriği girin" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Görüntüleyen Birim</label>
                    @Html.DropDownList("goruntuleyenBirimId", ViewBag.Birimler as SelectList, "Hepsi", new { @class = "form-control dropdown-list" })
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Duyuru Ekle</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 600px;
    }

    .card {
        border-radius: 15px;
    }

    .card-title {
        font-weight: bold;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .dropdown-list {
        color: #000; /* Metin rengini ayarla */
        background-color: #fff; /* Arka plan rengini ayarla */
    }

        .dropdown-list option {
            color: #000; /* Seçeneklerin metin rengini ayarla */
            background-color: #fff; /* Seçeneklerin arka plan rengini ayarla */
        }

    .dropdown-menu {
        color: #000;
        background-color: #fff;
    }
</style>
