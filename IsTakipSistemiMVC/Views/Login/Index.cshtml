@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>İş Takip Sistemi</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/theme/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/theme/css/feather.css">
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="~/theme/css/daterangepicker.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/theme/css/app-light.css" id="lightTheme">

    <style>
        .login-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-size: cover;
            background-position: center;
        }

        .login-container {
            display: flex;
            flex-direction: row;
            background-color: rgba(250, 250, 250, 0.9); /* Yarı saydam beyaz arka plan */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .login-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1;
            padding: 20px;
            border-right: 1px solid rgba(233, 236, 239, 0.8); /* Yarı saydam sınır */
            transition: transform 0.3s ease;
        }

            .login-logo:hover {
                transform: scale(1.1);
            }

        .login-form {
            flex: 2;
            padding: 20px;
        }
    </style>
</head>

<body class="light">
    <div class="wrapper vh-100">
        <div class="login-wrapper">
            <div class="login-container col-lg-6 col-md-8 col-12 mx-auto" style="width:625px; height:244px">
                <div class="login-logo">
                    <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="@Url.Action("Index", "Login")">
                        <img src="~/theme/assets/logo.png" alt="Logo">
                    </a>
                </div>

                <form class="login-form text-center" method="post" action="/Login/Index">
                    <div class="form-group">
                        <label for="kullaniciAd" class="sr-only">Kullanıcı Adı</label>
                        <input type="text" class="form-control form-control-lg" id="kullaniciAd" name="kullaniciAd" placeholder="Kullanıcı Adı" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="parola" class="sr-only">Parola</label>
                        <input type="password" class="form-control form-control-lg" id="parola" name="parola" placeholder="Parola" required>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
                    @if (ViewBag.mesaj != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.mesaj
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="~/theme/js/jquery.min.js"></script>
    <script src="~/theme/js/popper.min.js"></script>
    <script src="~/theme/js/moment.min.js"></script>
    <script src="~/theme/js/bootstrap.min.js"></script>
    <script src="~/theme/js/simplebar.min.js"></script>
    <script src="~/theme/js/daterangepicker.js"></script>
    <script src="~/theme/js/jquery.stickOnScroll.js"></script>
    <script src="~/theme/js/tinycolor-min.js"></script>
    <script src="~/theme/js/config.js"></script>
    <script src="~/theme/js/apps.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-56159088-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-56159088-1');
    </script>
</body>
</html>
