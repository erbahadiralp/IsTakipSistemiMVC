@{
    ViewBag.Title = "IzinTalep";
    Layout = "~/Views/Shared/_LayoutCalisan.cshtml";
}

@model IsTakipSistemiMVC.Models.Izinler

<h2>İzin Talep</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Başlangıç Tarihi")
        @Html.TextBox("baslangicTarihi", null, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        @Html.Label("Bitiş Tarihi")
        @Html.TextBox("bitisTarihi", null, new { @class = "form-control", @type = "date" })
    </div>
    <button type="submit" class="btn btn-primary">İzin Talep Et</button>
}

<div class="form-group" style="margin-top: 20px;">
    <a href="@Url.Action("GecmisIzinler", "Calisan")" class="btn btn-secondary">Geçmiş Talepleri Görüntüle</a>
</div>
