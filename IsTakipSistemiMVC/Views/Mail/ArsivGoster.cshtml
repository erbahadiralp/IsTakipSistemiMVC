@model IEnumerable<IsTakipSistemiMVC.Models.MailViewModel>

@{
    ViewBag.Title = "ArsivGoster";
    Layout = ViewBag.Layout;
}

<style>
    .custom-button {
        margin: 5px;
        transition: background-color 0.3s ease;
    }

        .custom-button:hover {
            background-color: #0056b3;
            color: white;
        }

    .button-container {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        display: none; /* Başlangıçta gizli */
        align-items: center;
    }

        .button-container.visible {
            display: flex; /* Checkbox işaretlendiğinde göster */
        }

    .search-bar {
        flex-grow: 1;
        display: flex;
        justify-content: flex-end;
        margin-left: auto;
    }

    .search-input {
        width: 200px;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-radius: 25px;
        font-size: 14px;
        outline: none;
        transition: box-shadow 0.3s ease;
    }

        .search-input:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .card-body {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 10px;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container mt-4">
    <h2>Arşivli Mailler</h2>

    <div class="card mb-4">
        <div class="card-body">
            <a href="@Url.Action("Index", "Mail")" class="btn btn-primary custom-button">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>

            <button id="unarchiveButton" class="btn btn-warning custom-button">
                <i class="fas fa-archive"></i> Arşivden Çıkar
            </button>

            <div class="search-bar">
                <input type="text" id="searchInput" class="search-input" placeholder="Arama yap...">
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="text-center table-dark">
                            <th>Seç</th>
                            <th>Gönderen</th>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>İçerik</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mail in Model)
                        {
                            <tr class="text-center" data-mail-id="@mail.MailId">
                                <td>
                                    <input type="checkbox" class="mail-checkbox" value="@mail.MailId" />
                                </td>
                                <td>@mail.GondericiAdSoyad</td>
                                <td>@mail.AliciAdSoyad</td>
                                <td>@mail.Konu</td>
                                <td>@mail.Icerik</td>
                                <td>@mail.GonderilmeTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
    document.getElementById('unarchiveButton').addEventListener('click', function () {
        var selectedMailIds = [];
        document.querySelectorAll('.mail-checkbox:checked').forEach(function (checkbox) {
            selectedMailIds.push(checkbox.value);
        });

        if (selectedMailIds.length === 0) {
            alert('Arşivden çıkarılacak mail seçilmedi.');
            return;
        }

        $.ajax({
            type: 'POST',
            url: '@Url.Action("MailArsivdenCikar", "Mail")',
            data: JSON.stringify({ ids: selectedMailIds }),
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                if (response.success) {
                    alert('Mailler başarıyla arşivden çıkarıldı.');
                    location.reload();
                } else {
                    alert(response.message);
                }
            }
        });
    });

    // Arama çubuğu
    document.getElementById('searchInput').addEventListener('keyup', function () {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var table = document.querySelector('table');
        var trs = table.getElementsByTagName('tr');
        for (var i = 1; i < trs.length; i++) {
            var tds = trs[i].getElementsByTagName('td');
            var display = false;
            for (var j = 0; j < tds.length; j++) {
                if (tds[j].textContent.toLowerCase().indexOf(filter) > -1) {
                    display = true;
                }
            }
            trs[i].style.display = display ? "" : "none";
        }
    });

    $('table tbody').on('dblclick', 'tr', function () {
        var mailId = $(this).data('mail-id');
        if (mailId) {
            window.location.href = '@Url.Action("MailDetay", "Mail")/' + mailId;
        }
    });

    // Checkbox kontrolü
    document.querySelectorAll('.mail-checkbox').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            var anyChecked = document.querySelectorAll('.mail-checkbox:checked').length > 0;
            document.querySelector('.button-container').style.display = anyChecked ? 'flex' : 'none';
        });
    });
</script>
