@{
    ViewBag.Title = "Index";
    Layout = ViewBag.Layout;
}

@model IEnumerable<IsTakipSistemiMVC.Models.MailViewModel>

<style>
    .custom-button {
        margin: 5px;
        transition: background-color 0.3s ease;
    }

        .custom-button:hover {
            background-color: #0056b3;
            color: white;
        }

    .button-container {
        display: flex;
        justify-content: flex-start;
        gap: 10px;
        display: none; /* Başlangıçta gizli */
        align-items: center;
    }

        .button-container.visible {
            display: flex; /* Checkbox işaretlendiğinde göster */
        }

    .search-bar {
        flex-grow: 1;
        display: flex;
        justify-content: flex-end;
        margin-left: auto;
    }

    .search-input {
        width: 200px;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-radius: 25px;
        font-size: 14px;
        outline: none;
        transition: box-shadow 0.3s ease;
    }

        .search-input:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .card-body {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 10px;
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="container mt-4">
    <h2>Gelen Kutusu</h2>

    <div class="card mb-4">
        <div class="card-body">
            <a href="@Url.Action("MailOlustur", "Mail")" class="btn btn-primary custom-button">
                <i class="fas fa-plus"></i> Mail Oluştur
            </a>
            <a href="@Url.Action("GidenMailler", "Mail")" class="btn btn-primary custom-button">
                <i class="fas fa-inbox"></i> Giden Mesajlar
            </a>

            <a href="@Url.Action("ArsivGoster", "Mail")" class="btn btn-primary custom-button">
                <i class="fas fa-archive"></i> Arşivlenmiş Mailler
            </a>

            <div class="col button-container" id="actionButtons">
                <button id="deleteSelected" class="btn btn-danger custom-button">
                    <i class="fas fa-trash-alt"></i>
                </button>
                <button id="markReadSelected" class="btn btn-success custom-button">
                    <i class="fas fa-envelope-open"></i>
                </button>
                <button id="archiveSelected" class="btn btn-warning custom-button">
                    <i class="fas fa-archive"></i> Arşivle
                </button>

            </div>
            <div class="search-bar">
                <input type="text" id="searchInput" class="search-input" placeholder="Arama yap...">
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr class="text-center table-dark">
                            <th><input type="checkbox" id="selectAll"></th>
                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var mail in Model)
                        {
                            <tr class="text-center">
                                <td><input type="checkbox" class="select-mail" data-mail-id="@mail.MailId"></td>
                                <td>@mail.GondericiAdSoyad</td>
                                <td>@mail.Konu</td>
                                <td>@mail.Icerik</td>
                                <td>@mail.GonderilmeTarihi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
    // Arama çubuğu
    document.getElementById('searchInput').addEventListener('keyup', function () {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var table = document.querySelector('table');
        var trs = table.getElementsByTagName('tr');
        for (var i = 1; i < trs.length; i++) {
            var tds = trs[i].getElementsByTagName('td');
            var display = false;
            for (var j = 0; j < tds.length; j++) {
                if (tds[j].textContent.toLowerCase().indexOf(filter) > -1) {
                    display = true;
                }
            }
            trs[i].style.display = display ? "" : "none";
        }
    });

    // Tüm mailleri seçme
    document.getElementById('selectAll').addEventListener('change', function () {
        var checkboxes = document.querySelectorAll('.select-mail');
        checkboxes.forEach(function (checkbox) {
            checkbox.checked = this.checked;
        }, this);
        toggleActionButtons();
    });

    // Bireysel mail seçme
    document.querySelectorAll('.select-mail').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            if (!this.checked) {
                document.getElementById('selectAll').checked = false;
            }
            toggleActionButtons();
        });
    });

    // Butonların görünürlüğünü yönetme
    function toggleActionButtons() {
        var selected = document.querySelectorAll('.select-mail:checked').length > 0;
        var actionButtons = document.getElementById('actionButtons');
        if (selected) {
            actionButtons.classList.add('visible');
        } else {
            actionButtons.classList.remove('visible');
        }
    }

    // Seçili mailleri arşivleme
    document.getElementById('archiveSelected').addEventListener('click', function () {
        var ids = Array.from(document.querySelectorAll('.select-mail:checked')).map(function (checkbox) {
            return parseInt(checkbox.getAttribute('data-mail-id'));
        });
        if (ids.length > 0) {
            fetch('@Url.Action("MailArsivle", "Mail")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(ids)
            }).then(response => response.json())
              .then(data => {
                  if (data.success) {
                      location.reload();
                  } else {
                      alert(data.message);
                  }
              });
        }
    });
</script>
