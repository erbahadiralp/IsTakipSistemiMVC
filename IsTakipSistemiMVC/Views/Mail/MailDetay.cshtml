@model IsTakipSistemiMVC.Models.MailViewModel

@{
    ViewBag.Title = "MailDetay";
    Layout = ViewBag.Layout;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Mail Detay</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h2 {
            border-bottom: 2px solid #d3d3d3;
            padding-bottom: 10px;
            margin-bottom: 20px;
            font-size: 24px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            text-align: left;
            padding: 12px 15px;
            border-bottom: 1px solid #d3d3d3;
        }

        th {
            background-color: #f5f5f5;
            width: 150px;
            font-weight: bold;
        }

        td {
            background-color: #fff;
        }

        .content {
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Mail Detayları</h2>
        <table>
            <tr>
                <th>Gönderen</th>
                <td>@Model.GondericiAdSoyad</td>
            </tr>
            <tr>
                <th>Konu</th>
                <td>@Model.Konu</td>
            </tr>
            <tr>
                <th>İçerik</th>
                <td class="content">@Html.Raw(@Model.Icerik.Replace("\n", "<br/>"))</td>
            </tr>
            <tr>
                <th>Gönderilme Tarihi</th>
                <td>@Model.GonderilmeTarihi</td>
            </tr>
        </table>
    </div>
</body>
</html>
