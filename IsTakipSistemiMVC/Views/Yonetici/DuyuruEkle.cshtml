﻿@{
    ViewBag.Title = "Duyuru Ekle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

@model IsTakipSistemiMVC.Models.Duyurular

<div class="container mt-5">
    <a href="@Url.Action("Duyurular", "Yonetici")" class="btn btn-secondary mb-3">Geri</a>
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center">Yeni Duyuru Ekle</h2>
            <hr />
            @using (Html.BeginForm("DuyuruEkle", "Yonetici", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label class="form-label" for="duyuruBaslik">Duyuru Başlık</label>
                    @Html.TextBoxFor(model => model.duyuruBaslik, new { @class = "form-control", placeholder = "Duyuru başlığı girin", id = "duyuruBaslik" })
                    @Html.ValidationMessageFor(model => model.duyuruBaslik, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label" for="duyuruIcerik">Duyuru İçerik</label>
                    @Html.TextAreaFor(model => model.duyuruIcerik, new { @class = "form-control", rows = 5, placeholder = "Duyuru içeriği girin", id = "duyuruIcerik" })
                    @Html.ValidationMessageFor(model => model.duyuruIcerik, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Duyuru Ekle</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 10px;
    }

    .form-check-label {
        color: #495057;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary, .btn-secondary {
        border-radius: 5px;
        padding: 10px 20px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }

        .btn-outline-secondary:hover {
            color: #fff;
            background-color: #6c757d;
            border-color: #6c757d;
        }

    .text-center {
        font-weight: bold;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .mt-5 {
        margin-top: 3rem !important;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075) !important;
    }

    .p-3 {
        padding: 1rem !important;
    }

    .input-group {
        display: flex;
        align-items: center;
    }

    .form-check-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
</style>