@model IEnumerable<IsTakipSistemiMVC.Models.CalisanViewModel>

@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg text-center">
            <h5>@ViewBag.birimAd Birimi için Çalışan İşlerini Listeleme</h5>
        </div>
        <div class="card-body">

            <!-- Çalışan Seçme ve İşleri Getir Butonu -->
            @using (Html.BeginForm("Takip", "Yonetici", FormMethod.Post))
            {
                <div class="mb-4 text-center">
                    <label for="selectPer" class="form-label">Çalışan Seçiniz</label>
                    <select class="form-select mx-auto" name="selectPer" id="selectPer">
                        @foreach (var personel in Model)
                        {
                            <option value="@personel.PersonelId">@personel.PersonelAdSoyad</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button class="btn btn-dark btn-block" type="submit">İşleri Getir</button>
                </div>
            }
        </div>
    </div>

    <!-- İş Durumları Tablosu -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title text-center">Çalışan İş Durumları</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Toplam İş Sayısı</th>
                            <th>Tamamlanan İş Sayısı</th>
                            <th>Tamamlanmayan İş Sayısı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personel in Model)
                        {
                            <tr>
                                <td>@personel.PersonelAdSoyad</td>
                                <td>@personel.TotalJobs</td>
                                <td>@personel.CompletedJobs</td>
                                <td>@personel.UncompletedJobs</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        border: none;
        overflow: hidden;
    }

    .card-header {
        background-color: #343a40;
        color: white;
        border-bottom: 1px solid #ddd;
    }

    .card-title {
        color: #343a40;
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .table {
        border-radius: 8px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background-color: #343a40;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .form-label {
        font-weight: 600;
        color: #343a40;
    }

    .form-select {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        display: block;
        max-width: 300px; /* Select kutusunun genişliğini sınırla */
    }

        .form-select:focus {
            border-color: #343a40;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

    .btn-block {
        width: 100%;
        padding: 10px;
    }

    .btn-dark {
        background-color: #343a40;
        border-color: #343a40;
        transition: background-color 0.2s ease, border-color 0.2s ease;
    }

        .btn-dark:hover {
            background-color: #23272b;
            border-color: #1d1f1f;
        }

    .container {
        max-width: 800px;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
