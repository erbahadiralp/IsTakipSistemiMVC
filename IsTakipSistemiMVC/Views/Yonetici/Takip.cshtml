@model IEnumerable<IsTakipSistemiMVC.Models.CalisanViewModel>

@{
    ViewBag.Title = "Takip";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h5>@ViewBag.birimAd Birimi için Çalışan İşlerini Listeleme</h5>
        </div>
        <div class="card-body">

            <h5 class="card-title text-center">Çalışan İş Durumları</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="text-center table-dark">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Toplam İş Sayısı</th>
                            <th>Tamamlanan İş Sayısı</th>
                            <th>Tamamlanmayan İş Sayısı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var personel in Model)
                        {
                            <tr class="text-center">
                                <td>@personel.PersonelAdSoyad</td>
                                <td>@personel.TotalJobs</td>
                                <td>@personel.CompletedJobs</td>
                                <td>@personel.UncompletedJobs</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <hr />

            @using (Html.BeginForm("Takip", "Yonetici", FormMethod.Post))
            {
                <div class="mb-3">
                    <label for="selectPer" class="form-label">Çalışan Seçiniz</label>
                    <select class="form-select" name="selectPer" id="selectPer">
                        @foreach (var personel in Model)
                        {
                            <option value="@personel.PersonelId">@personel.PersonelAdSoyad</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-block" type="submit">İşleri Getir</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: scale(1.01);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        background-color: #007bff;
        color: white;
    }

    .card-title {
        margin-bottom: 20px;
        color: #007bff;
        text-align: center;
    }

    .form-label {
        font-weight: bold;
        color: white;
        margin-bottom: 10px;
    }

    .form-select {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        transition: border-color 0.2s;
        margin-top: 5px;
    }

        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-block {
        width: 100%;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .container {
        max-width: 800px;
    }

    .table {
        margin-top: 20px;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .table-hover tbody tr:hover {
        background-color: #d6eaff;
    }

    th {
        background-color: white;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .form-select {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        transition: border-color 0.2s;
    }

        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.2s, border-color 0.2s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>
