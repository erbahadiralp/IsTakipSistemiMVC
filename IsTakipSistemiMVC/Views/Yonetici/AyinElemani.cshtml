@{
    ViewBag.Title = "AyinElemani";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="alert alert-dark" role="alert">
                @using (Html.BeginForm("AyinElemani", "Yonetici", FormMethod.Post, new { @class = "row g-3 align-items-center" }))
                {
                    <div class="col-auto">
                        @Html.Partial("_PartialAylarSelect")
                    </div>

                    <div class="col-auto">
                        <select class="form-select" name="yillar">
                            @foreach (var yil in ViewBag.yillar)
                            {
                                <option value="@yil">@yil</option>
                            }
                        </select>
                    </div>

                    <div class="col-auto">
                        <button class="btn btn-primary">Ayın Elemanını Getir</button>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-6">
            @if (ViewBag.ayinElemani != null)
            {
                <div class="alert alert-success" role="alert">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @ViewBag.ayinElemani.personelAdSoyad
                            <span class="badge bg-primary rounded-pill">Yapılan İş Toplamı: @ViewBag.ayinElemani.toplamIs</span>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="alert alert-dark" role="alert">
                    Herhangi bir çalışan bulunamadı
                </div>
            }
        </div>
    </div>
</div>

<style>
    .alert {
        border-radius: 10px;
    }

    .btn-primary {
        width: 100%;
    }

    .list-group-item {
        border: none;
        padding: 10px 15px;
    }
</style>
