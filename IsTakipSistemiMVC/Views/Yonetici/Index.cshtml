@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

@{
    var sonDuyuru = ViewBag.SonDuyuru as IsTakipSistemiMVC.Models.Duyurular;
}

@model IEnumerable<IsTakipSistemiMVC.Models.ToplamIs>

<div class="container mt-4">
    <div class="row">
        <!-- Duyurular, Çalışanlarım ve Ayın Elemanı Kartları Kapsayıcı Div -->
        <div class="col-lg-6 mb-2">
            <!-- Duyurular Kartı -->
            @if (sonDuyuru != null)
            {
                <div class="card shadow-sm announcement-card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@sonDuyuru.duyuruBaslik</h5>
                        <p class="card-text">@sonDuyuru.duyuruIcerik</p>
                        <p class="card-text"><small class="text-muted">@sonDuyuru.duyuruTarih</small></p>
                    </div>
                </div>
            }
            else
            {
                <p>Henüz duyuru bulunmamaktadır.</p>
            }

            <!-- Çalışanlarım Kartı -->
            <div class="card shadow-sm personal-card mb-2">
                <div class="card-body">
                    <h6 class="card-title">Çalışanlarım</h6>
                    <div class="table-responsive">
                        <table class="table table-hover employee-table">
                            <thead class="employee-table-header">
                                <tr class="text-center">
                                    <th>Ad Soyad</th>
                                    <th>Dahili Telefon Numara</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var personel in ViewBag.personeller)
                                {
                                    <tr class="text-center">
                                        <td>@personel.personelAdSoyad</td>
                                        <td>@personel.personelDahili</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Ayın Elemanı Kartı -->
            <div class="card shadow-sm ayin-elemani-card mb-2" style="height: 250px">
                <div class="card-body">
                    <h6 class="card-title">Ayın Elemanı</h6>
                    <div class="alert alert-dark" role="alert">
                        @using (Html.BeginForm("AyinElemani", "Yonetici", FormMethod.Post, new { @class = "row g-3 align-items-center" }))
                        {
                            <div class="col-auto">
                                @Html.Partial("_PartialAylarSelect")
                            </div>

                            <div class="col-auto">
                                <select class="form-select" name="yillar">
                                    @foreach (var yil in ViewBag.yillar)
                                    {
                                        <option value="@yil">@yil</option>
                                    }
                                </select>
                            </div>

                            <div class="col-auto">
                                <button class="btn btn-primary">Ayın Elemanını Getir</button>
                            </div>
                        }
                    </div>
                    <div class="col-md-12">
                        @if (ViewBag.ayinElemani != null)
                        {
                            <div class="alert alert-success" role="alert">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @ViewBag.ayinElemani.personelAdSoyad
                                        <span class="badge bg-primary rounded-pill">Yapılan İş Toplamı: @ViewBag.ayinElemani.toplamIs</span>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-dark" role="alert">
                                Herhangi bir çalışan bulunamadı
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ: Çalışan Performansı Çizelgesi ve Günün Yemeği Kartı -->
        <div class="col-lg-6 mb-2">
            <!-- Çalışan Performansı Çizelgesi -->
            <div class="card shadow-sm chart-card mb-2" style="height:368px" id="performanceCard">
                <div class="card-body">
                    <h6 class="card-title">Çalışan Performansı</h6>
                    <canvas id="performanceChart"></canvas>
                </div>
            </div>

            <!-- Günün Yemeği Kartı -->
            <div class="card shadow-sm meal-card">
                <div class="card-body">
                    <h5 class="card-title">Günün Menüsü</h5>
                    <p class="card-text">
                        @{
                            var bugunYemek = ViewBag.BugunYemek as IsTakipSistemiMVC.Models.YemekTablo;
                        }
                        @if (bugunYemek != null)
                        {
                            <ul class="list-group mb-2">
                                <li class="list-group-item"> @bugunYemek.YemekAdi1</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi2</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi3</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi4</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi5</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi6</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi7</li>
                                <li class="list-group-item"> @bugunYemek.YemekAdi8</li>
                            </ul>
                        }
                        else
                        {
                        <p>Bugün için yemek menüsü bulunmamaktadır.</p>
                    }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

