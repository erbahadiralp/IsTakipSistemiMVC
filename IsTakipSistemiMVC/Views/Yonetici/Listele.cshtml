@{
    ViewBag.Title = "Listele";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="container mt-5">
    <div class="mb-4 text-center">
        <h3 class="text-primary">@ViewBag.personel.personelAdSoyad İşleri</h3>
    </div>

    @if (ViewBag.isSayisi != 0)
    {
        <div class="row">
            @foreach (var i in ViewBag.Isler)
            {
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h4 class="card-title text-center">@i.isBaslik</h4>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <strong class="text-dark">Açıklama:</strong> <span class="text-dark">@i.isAciklama</span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-dark">İletilen Tarih:</strong> <span class="text-dark">@i.iletilenTarih.ToString("dd MMMM yyyy hh:mm")</span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-dark">Yapılan Tarih:</strong> <span class="text-dark">@(i.yapilanTarih != null ? @i.yapilanTarih.ToString("dd MMMM yyyy hh:mm") : "Henüz Girilmedi")</span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-dark">İş Durum:</strong> <span class="text-dark">@i.Durumlar.durumAd</span>
                                </li>
                                <li class="list-group-item">
                                    <strong class="text-dark">İş Yorumu:</strong> <span class="text-dark">@i.isYorum</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center" role="alert">
            Henüz İş Verilmemiş
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        margin-bottom: 1rem;
        font-size: 1.25rem;
        color: #007bff;
    }

    .list-group-item {
        border: none;
        padding: 1rem;
        background-color: #f9f9f9;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .list-group-item:hover {
            background-color: #e9ecef;
            color: #495057;
        }

        .list-group-item strong {
            color: #343a40;
        }

    .alert {
        margin-top: 2rem;
        font-size: 1.1rem;
        padding: 1rem;
        border-radius: 8px;
        background-color: #f8f9fa;
        color: #495057;
    }

    .text-primary {
        color: #007bff !important;
    }

    .text-dark {
        color: #343a40 !important;
    }

    .container {
        max-width: 1200px;
    }
</style>