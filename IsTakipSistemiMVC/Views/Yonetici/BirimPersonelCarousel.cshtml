@model List<IsTakipSistemiMVC.Models.CalisanViewModel>

<div id="personelCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var personel = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@personel.PersonelFotograf" class="d-block carousel-image" alt="@personel.PersonelAdSoyad">
                <div class="carousel-caption d-none d-md-block caption-top">
                    <h5>@personel.PersonelAdSoyad</h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#personelCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#personelCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<style>
    .carousel-item {
        position: relative;
    }

    .carousel-image {
        width: 200px; /* İstediğiniz genişlik */
        height: 200px; /* İstediğiniz yükseklik */
        object-fit: cover; /* Resmi kapsayacak şekilde kesme */
        border-radius: 50%; /* Tam yuvarlak */
        margin: 0 auto;
    }

    .carousel-caption {
        position: absolute;
        bottom: 10px; /* Fotoğrafın alt kısmında 10px mesafe */
        left: 50%;
        transform: translateX(-50%); /* Ortalamak için */
        color: #fff; /* Metin rengi beyaz */
        background-color: rgba(0, 0, 0, 0.5); /* Arka plan rengi ve şeffaflık */
        padding: 5px 10px;
        border-radius: 5px;
        text-align: center;
    }
</style>

